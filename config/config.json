{
    "camera": {
        "device": "/dev/video2",
        "resolution": "800x600",
        "fps": 30,
        "format": "MJPG"
    },
    "storage": {
        "video_dir": "data/videos",
        "image_dir": "data/images",
        "archive_dir": "data/archives",
        "temp_dir": "data/temp",
        "min_free_space": 1073741824,
        "auto_cleanup_threshold": 0.9,
        "auto_cleanup_keep_days": 30
    },
    "api": {
        "address": "0.0.0.0",
        "port": 8080,
        "static_files_dir": "static",
        "use_https": false,
        "ssl_cert_path": "",
        "ssl_key_path": "",
        "enable_cors": true,
        "cors_allowed_origins": "*",
        "enable_api_key": false,
        "api_key": "",
        "log_level": "info"
    },
    "monitor": {
        "interval_ms": 1000
    },
    "logging": {
        "level": "trace",
        "file": "logs/cam_server.log",
        "max_size": 10485760,
        "max_files": 5
    }
}
